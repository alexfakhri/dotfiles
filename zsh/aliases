# lazy
# trying it with neovim
alias f="fg"
alias l="ls"

# misc
alias slrn="slrn -n"
alias man="LC_ALL=C LANG=C man"
alias ll="ls -al"
alias ls="ls -G"

# bundle and ruby rails stuff
alias be="bundle exec"
alias bi="bundle install"
alias rk="rake"

# git alises
alias ga="git add"
alias gaa="git add . -A"
alias gap="git add -p"
alias gci="git ci"
alias gcm="git ci -m"
alias gco="git co"
alias gcob="git co -b"
alias gd="git diff"
alias gds="git diff --staged"
alias gl="git pull"
alias gp="git push"
alias gca="git commit -a"
alias grba="git rebase --abort"
alias grbc="git rebase --continue"
alias grb="git rebase"
alias grbi="git rebase -i"

# vagrant
alias vup="vagrant up"
alias vhalt="vagrant halt"
alias vssh="vagrant ssh"

# dotfiles
alias srcz="source ~/.zshrc"

# rails
alias rup="(bundle check || bundle install) && rake db:migrate db:test:prepare"
alias springstub="bundle exec spring binstub --all"

# thanks to @phuunet for this one
# https://twitter.com/phuunet/status/339318973634052096
alias topcmds='cat ~/.zhistory | cut -d ";" -f 2 | sed "s, .*,," | sort | uniq -c | sort -n | tail -rn 30'

# diffocop
alias diffocop="git diff origin/dev --name-only --diff-filter=ACMRTUXB | grep '\.rb$' | tr '\n' ' ' | xargs rubocop"

